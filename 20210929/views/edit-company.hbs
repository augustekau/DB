<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    .heading{ margin-top:80px }
  </style>
  <body>
    <h1 class="heading mb-3">
      Imones duomenu redagavimas
    </h1>
    {{#if messages}}
    <div class="alert alert-{{status}}">{{messages}}</div>
{{/if}}
    <form method="post" action="/edit-company/{{edit.id}}">
       {{!-- {{#each edit}} --}}
     <input type="hidden" name="id" value="{{edit.id}}" />
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Imones pavadinimas</label>
        <div class="col-sm-10">
          <input type="text" name="name" value= "{{edit.name}}" />
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Imones adresas</label>
        <div class="col-sm-10">
          <input type="text" name="address" value= "{{edit.address}}" />
        </div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Redaguoti </button>
      {{!-- {{/each}} --}}
    </form>

  </body>
</html>