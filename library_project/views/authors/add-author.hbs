<h1 class="heading">
  Add author
</h1>
{{#if messages}}
  <div class="alert alert-{{status}}">{{messages}}</div>
{{/if}}
<form method="post" action="/add-author">
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Author name</label>
    <div class="col-sm-10">
      <input type="text" name="name" value="" />
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Author surname</label>
    <div class="col-sm-10">
      <input type="text" name="surname" value="" />
    </div>
  </div>
  <button type="submit" class="btn btn btn-outline-success">Submit</button>
</form>