<div class="heading mb-3">
  <h1>
    Books list
  </h1>
</div>

{{#if messages}}
  <div class="alert alert-{{status}}">{{messages}}</div>
{{/if}}

{{#if books}}
  <table class="table table-striped">
    <tr>
      <th>
        ID
      </th>
      <th>
        Title
      </th>
      <th>
        Pages
      </th>
      <th>
        Short Description
      </th>
      <th>
        Author
      </th>
      <th>
      </th>
      <th>
      </th>
    </tr>
    {{#each books}}
      <tr>
        <td>
          {{id}}
        </td>
        <td>
          {{title}}
        </td>
        <td>
          {{pages}}
        </td>
        <td>
          {{short_description}}
        </td>

        <td>
          {{author_name}}
          {{author_surname}}
        </td>

        <td><a
            href="/edit-book/{{id}}"
            class="btn btn-outline-dark"
          >Edit</a></td>
        <td><a
            href="/delete-book/{{id}}"
            class="btn btn-outline-dark btn-delete"
          >Delete</a></td>
      </tr>
    {{/each}}
  </table>

{{else}}
  <h4>There are no books in the database</h4>
{{/if}}